{
    "manifest_version": 2,
    
    "name": "REBOOSTER",
      
    "description": "User can block sites when they exceed time limit, blur censored words, check site integirty & network speed",
      
    "version": "1.0",
      
    "icons": {
        "128": "REBOOSTER.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    
    "options_page": "options.html",

    "permissions":[
        "tabs",
        "activeTab",
        "storage",
        "idle",
        "chrome://favicon/*",
        "webNavigation",
        "unlimitedStorage",
        "notifications"
    ],
    
    "background": {
        "scripts":
        [
            "r91.js", 
            "r9_c1.js",
            "background.js",
            "tabs.js",
            "functions.js"
        ],
        "persistent": false
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "Web Activity Time Tracker",
        "default_icon": "REBOOSTER.png"
    }
}